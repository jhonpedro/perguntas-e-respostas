<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container my-5">
        <div class="card">
            <div class="card-header">
                <h3>
                    <%= pergunta.titulo %>
                </h3>
            </div>
            <div class="card-body">
                <p> <%= pergunta.descricao %>  </p>
            </div>
        </div>
        <h4 class="mt-5">Responda</h4>
        
        <form method="POST" action="/responder">
            <label for="resposta" class="lead my-3">Sua resposta:</label>
            <textarea class="form-control" placeholder="Digite sua resposta" id="resposta" name="corpo" cols="30" rows="5"></textarea>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %> ">
            <button type="submit" class="d-block ml-auto btn btn-outline-info mt-4">Enviar resposta</button>
        </form>
        <hr>
        <h4>Respostas</h4>
        <hr>
        <% respostas.forEach(resposta => { %>
            <div class="card my-3">
                <div class="card-body">
                    <%= resposta.corpo %> 
                </div>
            </div>
        <% }) %>
    </div>
</body>
<%- include ('partials/footer.ejs') %>