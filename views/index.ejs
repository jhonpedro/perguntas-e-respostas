<%- include ("partials/header.ejs") %> 
<body> 
  <%- include ("partials/navbar.ejs") %> 
  <div class="container">
    <hr>
    <h2 class="display-4 text-center">Perguntas</h2>
    <hr>
      <a href="/perguntar" class="btn btn-outline-info mt-4">Fazer uma pergunta agora!</a>
    <% pergunta.forEach(pergunta => { %>
      <div class="card my-5">
        <div class="card-body">
          <h4><%= pergunta.titulo %> </h3>
          <p> <%= pergunta.descricao %> </p>
        </div>
        <div class="card-footer">
          <a class="float-right" href="/pergunta/<%= pergunta.id %> "><button class="btn btn-outline-info">Responder</button></a>
        </div>
      </div>
    <% }) %>
  </div>
</body>
<%- include ("partials/footer.ejs") %> 